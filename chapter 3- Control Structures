def multiple():
    a=int(input('enter a number '))
    b=int(input('enter another number'))


    if a > b:
        great=a
        short=b
    else:
        great=b
        short=a

    for i in range(1,short+1):
        if (great%i==0 and short%i ==0):
            hcf=i
    print(hcf)
multiple()

Q7
(a) a little error for odd power of x(if entered)

import math

def series(r,x):


    j=1
    i=int(r/2)
    k=0
    for n in range(1,i+1):
        y = math.factorial(2 * n)
        a = -((x ** (2 * n)) / y)
        j=-j-a
        k=k+1

    if k%2==0:
        c=j
    else:
        c=-j
    return c

def akr():
    k=int(input("enter the value of n "))
    akshu=int(input("enter the value of x : "))
    y=series(k,akshu)
    print(y)

akr()

(b)

import math

def exp(n,x):
    j=0


    for i in range(0,n+1):
        y=math.factorial(i)
        k=(x**i)/(y)
        j= j + k
    return j

def akr():
    a= int(input("enter the value of n : "))
    b=int(input('enter the value of x : '))
    y=exp(a,b)
    print("the value of series is ",y)

akr()

Q8.

def palindrome():
    number=int(input('enter the number '))
    temp = number
    reverse=0
    while(number>0):
        reminder = number % 10
        reverse = reverse * 10 + reminder
        number = number // 10   #( // returns integer value and / returns float value)

    if reverse == temp:
        print('the number is pelindrome/True')
    else:
        print('the number is not pelindrome/False')

palindrome()

Q9.

def sum_of_digits():
    number=int(input('enter the number '))

    sum=0
    while(number>0):
        reminder = number % 10
        sum = sum + reminder
        number = number//10

    print(sum)

sum_of_digits()

Q10.

program to check armstrong number

def armstrong_number():
    a=int(input('enter the number '))
    number=a

    sum=0
    while(number>0):
        reminder = number % 10
        sum = sum + (reminder ** 3)
        number = number//10
    if a==sum:
        print("the number is armstrong")
    else:
        print('number is not armstrong')

armstrong_number()

program to print armstrong numbers in range of 1 to 1000

def armstrong_number():
    for i in range(1,1000):
        number=i
        sum=0
        while (number > 0):
            reminder = number % 10
            sum = sum + (reminder ** 3)
            number = number // 10
        if i== sum:
                print(i)

armstrong_number()

Q11.

def multiple():
    a=int(input('enter a number '))
    b=int(input('enter another number'))


    if a > b:
        great=a
        short=b
    else:
        great=b
        short=a

    for i in range(2,short+1):
        if (great%i != 0 and short%i !=0):
            print("numbers are co prime")
            break
        else:
            print(" numbers are not co prime")
            break

multiple()
