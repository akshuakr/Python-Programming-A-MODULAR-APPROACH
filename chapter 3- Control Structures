def multiple():
    a=int(input('enter a number '))
    b=int(input('enter another number'))
    c= a*b
    if a > b:
        great=a
    else:
        great=b
    for i in range(1,c+1):
        if (great % a==0 & great % b==0):
            lcm= great
        else:
            great += 1

    print(lcm)
multiple()

