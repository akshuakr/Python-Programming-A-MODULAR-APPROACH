Q3.

def perfect():
    a=0
    number=int(input("enter a number to check whether it is perfect or not: "))
    for i in range(1,number):
        if (number % i ==0):
            a = a + i

        else:
            continue
    if (a == number) :
        print("the number is perfect")
    else:
        print("the number is not perfect")

perfect()

